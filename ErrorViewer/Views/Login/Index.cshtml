@{
    
    ViewData["Title"] = "Login";
}

<div class="bg-light vw-100 mx-auto d-flex justify-content-center">
    <div class="d-flex vh-100 flex-column justify-content-center">
        <div class="w-auto h-auto mb-5 bg-primary rounded-3 px-5 py-3 shadow-lg">
            
            <form asp-controller="Auth" asp-action="Login" class="text-center d-flex flex-column gap-2 px-3">
                <h1 class="text-white">Login</h1>
                <label for="username" class="form-label text-white fs-4">
                    <i class="bi bi-person"></i>
                    Username
                </label>
                
                <input id="username" name="Username" type="text" placeholder="Username" class="form-control" required/>
                
                <label for="password" class="form-label text-white fs-4">
                    <i class="bi bi-key"></i>
                    Password
                </label>
                <input id="password" name="Password" type="password" placeholder="Password" class="form-control" required/>
                <input type="submit" class="btn btn-light text-primary rounded-3 px-2 mt-3" value="Login">

                @if (ViewBag.AuthError != null)
                {
                    <p class="text-white m-1">@(ViewBag.AuthError)</p>
                }

            </form>
        </div>
    </div>
</div>